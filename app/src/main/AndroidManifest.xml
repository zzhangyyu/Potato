<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoler.potato">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ConsiliaDateIntroActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.ConsiliaDetailActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.ConsiliaPatientIntroActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.UserFavouritePatientActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.SignInActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>